{
  "name": "mobile-hairdresser",
  "version": "0.2.4",
  "private": true,
  "description": "a market place for mobile hairdressers & potential customers",
  "scripts": {
    "unit-test": "jest --watchAll",
    "test": "jest --testEnvironment=node --verbose  --forceExit --watchAll --maxWorkers=1",
    "test-coverage": " jest --collect-coverage --testEnvironment=node --forceExit --maxWorkers=1",
    "start": "node bin/www",
    "lint": "lint-staged",
    "lint-only": "eslint .",
    "lint-all": "pretty-quick && eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "*.+(json|css|md)": [
      "pretty-quick --staged"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serhatci/mobile-hairdresser.git"
  },
  "author": "serhat ciftci <start.a.huge.foolish.project@gmail.com>",
  "license": "SEE LICENCE IN LICENCE",
  "bugs": {
    "url": "https://github.com/serhatci/mobile-hairdresser/issues"
  },
  "homepage": "https://github.com/serhatci/mobile-hairdresser#readme",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "mongoose": "^5.12.13",
    "mongoose-autopopulate": "^0.14.0",
    "morgan": "~1.9.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.15.2",
    "@types/jest": "^26.0.23",
    "babel-eslint": "^10.1.0",
    "connect-livereload": "^0.6.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "livereload": "^0.9.3",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3"
  }
}
