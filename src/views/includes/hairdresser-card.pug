.card
  .row.g-0
    .col-4.d-flex.flex-wrap.align-items-center.justify-content-center.p-2
      img.card-img-center.img-thumbnail.rounded-circle(src='/images/photos/hairdresser.jpg', alt='hairdresser')
      h5.card-title.mt-1 #{ hairdresser.fullname }
    .col-8
      .card-body
        .row.g-0
          .col-6
            p.text-start.m-0.fs-4 #{ hairdresser.address.city }, #{ hairdresser.address.state }
          .col-6.text-end
            include social-media-icons.pug
        p.card-about.text-start.mt-4 #{ hairdresser.about }
        .row.g-0
          col-12.col-lg-6
            p.text-start Available at
              span.text-danger.ms-1 #{ hairdresser.availability }
          col-12.col-lg-6
            include ratings.pug

